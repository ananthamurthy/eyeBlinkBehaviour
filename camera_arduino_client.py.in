        bbox_ = []
        bbox_.append((x, y))

    elif event == cv2.EVENT_LBUTTONUP:
        if abs( x - bbox_[0][0] ) > 10 and abs( y - bbox_[0][1] ) >  10:
            bbox_.append((x, y))
            default_bbox_ = bbox_ 
        else:
            bbox_ = default_bbox_
