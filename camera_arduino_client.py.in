def get_mouse_val( ms, speed ):
    # Read mouse line for socket.
    # Fetch all the data and read the last line. This one is the
    # lastest line sent by mouse.
    mr = None
    err = '(:)'
    try:
        mr = ms.recv( 4096 ) 
    except Exception as e:
        print( 'Could not connect to MOUSE. %s' % e )
        finished_all_ = True
        return err

    # The last line may not be complete, second last line is a good
    # idea.
    lastLine = mr.split( '\n' )[-2]
    if not lastLine:
        return err

    mouseData = lastLine.split( ',' )
    # The first entry is usually timestamp.
    ss = [ to_float(x) for x in mouseData ]
    if len(ss) < 1:
        return err 

    # velocity is followed by direction.
    try:
        r1 = math.copysign( ss[-2], ss[-1] ) 
        speed.append( r1 )
        speed.pop(0)
        return ',(%s:%s)' % (mouseData[0], r1 )
    except Exception as e:
        printException( ss )
        return err

def camera_client(readP, trialIndex, cameraPinValue):
    global finished_all_
    global img_, buf_
    global image_stack_

    # Camera socket and Mouse socket.
    s = socket.socket(socket.AF_UNIX, socket.SOCK_STREAM)
    ms = socket.socket( socket.AF_UNIX, socket.SOCK_STREAM )

    # Connect to socket. Try only for 5 seconds.
    now = time.time()
    while not finished_all_:
        if time.time() - now > 5:
            print('[INFO] Timeout in connecting socket. Quitting')
            finished_all_ = True
            break
        try:
            print( 'Trying to connect to %s' % sock_name_ )
            s.connect(sock_name_)
        except Exception as e:
            print( e )
            time.sleep(1)

        try:
            print( 'Trying to connect to %s' % mouse_sock_ )
            ms.connect( mouse_sock_ )
            break
        except Exception as e:
            print( e )
            time.sleep( 1 )
        else:
            time.sleep(1)

    print( '[INFO] Connected with both arduino board and Mouse' )
    totalBytesRead = 0
    totalFrames = 0
    buf, mousebuf = '', '\n'.join( [ 'BABA JI KA THULLU' ] * 2 )
    init_stack()
    framesInStack = 0
    trial_count = 0
    blinks_ = []
    speed_ = [ -1.0 ]
    writeTrial_ = False
    recording_ = False
    cameraPinState = [False, False]
    while not finished_all_:
        data = s.recv(frame_size_)
        buf += data
        if len(buf) >= frame_size_:
            now = datetime.datetime.now().isoformat()
            img = np.frombuffer(buf[:frame_size_], dtype=np.uint8)
            img = np.reshape(img, img_shape_)
            txt = now

            # This is critical.
            # Read from PIPE but it should not be blocking.
            if readP.poll(1e-4):
                txt += ',' + readP.recv()

            mr = get_mouse_val( ms, speed_ )
            txt += ',%s' % mr

            if len(bbox_) == 2:
                # print( 'Bounding box has been drawn : %s' % str(bbox_) )
                cv2.rectangle( img, bbox_[0], bbox_[1], 128 )
                (x0, y0), (x1, y1) = bbox_
                roi = img[y0:y1,x0:x1]
                # Equalize histogram
                roi = cv2.equalizeHist( roi )
                infile, outfile, res, sss = blinky.process_frame(roi, 0)
                #cv2.imshow( 'algo', outfile )

                # When camera pin goes HIGH, start writing trial.
                if cameraPinValue.value == 1:
                    msg = '%.2f (ON)'  % res
                    recording_ = True
                    cameraPinState.append( True )
                    cameraPinState.pop( 0 )
                else:
                    msg = '%.2f'  % res
                    cameraPinState.append( False )
                    cameraPinState.pop( 0 )

                if (not cameraPinState[1]) and cameraPinState[0]:
                    writeTrial_ = True
                    recording_ = False
                else:
                    writeTrial_ = False
            else:
                res = random.random( )

            blinks_.append( res )

            # Append blink value to data.
            txt += ',%4.3f' % blinks_[-1]

            # Fill txt to have its length equal to frame width
            assert len(txt) < img.shape[1], "Too much text to write"
            txt += ' ' * (img.shape[1] - len(txt))

            # Convert txt to binary and prefix to the img we got from camera
            # server.
            metadata = np.array(map(ord, txt), dtype=np.uint8)
            img = np.vstack((metadata, img))

            if write_data_:
                cv2.putText(img, txt.strip(), (0, h_ - 10),
                            cv2.FONT_HERSHEY_SIMPLEX, 0.25, 128, 1
                            )

            # Only save the frame if camera pin says so.
            if recording_:
                image_stack_[framesInStack] = img
                framesInStack += 1


            # Show every 10th frame.
            if totalFrames % 10 == 0:
                show_frame( img )
                # show_frame( np.vstack( (infile, outfile )) )

                # Enable the following if you want to see the blink data on
                # separate plot window. Slows down frame rate a bit ~ 10 to
                # 20 FPS.

                if len(bbox_) == 2:
                    if len( blinks_ ) > 10:
                        gnuplot_.plot( 
                                np.array( blinks_[-2000:] )
                                , legend = "Speed : %f" % speed_[-1] 
                                )

            buf = buf[frame_size_:]

        totalFrames += 1
        
        # Write to file and set flag to OFF.
        if writeTrial_:
            framesInStack = 0
            writeTrial_ = False
            save_img_stack(image_stack_, trialIndex.value)
            init_stack()

        if framesInStack >= max_frames_in_trial:
            framesInStack = 0
            print( '[INFO] Too many frames in buffer.. flusing ' )
            save_img_stack(image_stack_, -1 )
            init_stack( )


def main():
    # Lock so that only one process prints to console at a time.
    # When daemon is set to True, all threads will exit (ungracefully) when main
    # terminates.
    global finished_all_

    config.init_logger(config.args_.port.replace('/', '_'))
    init_arduino_client()
    print('Initialized arduino board')

    # Variables to share between processes.
    trialIndex = Value('d', 0)
    cameraPinValue = Value( 'd', 0 )

    readP, writeP = Pipe(duplex=False)

    cam = Process( target=camera_client
            , args=(readP,trialIndex, cameraPinValue )
            )
    cam.daemon = True
    cam.start()
    print('Camera client launched')

    arduinoP = Process(
            target=arduino_client,
            args=(writeP, trialIndex, cameraPinValue)
            )
    arduinoP.daemon = True
    arduinoP.start()
    print("Arduino client launched")

    try:
        send_command()
    except Exception as e:
        print('Got %s in send_comamnd' % e)
        finished_all_ = True
        raise KeyboardInterrupt

    arduinoP.join()
    cam.join()
    print('All done. Raising Ctrl+C to cleanup.')
    raise KeyboardInterrupt

