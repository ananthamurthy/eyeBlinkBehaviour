def trial_file_path( trial = 0 ):
    filename = "name=%s_st=%s_sn=%s" % (
        config.args_.name, config.args_.session_type, config.args_.session_num
            )
    filename += 'trial=%d.dat' % trial
    trial_file_ = os.path.join( data_dir_, filename )
    return trial_file_ 

def cleanup():
